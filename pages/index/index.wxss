page{
	height: 100%;
	width: 100%;
}
page .btl{
	width:100%;
	height: 100%;
}
page .title{
	height: 100%;
}
.title{
	width:200rpx;
	background: #f7f7f7;
	font-size:30rpx;
	color:#000;

}
.title .item{
	height: 100rpx;
	width:100%;
	border-bottom: 2rpx solid #fff;

}
.title .selected{
	background: #fff;
	color:#ff3d41;
	border-left: 9rpx solid #ff3d41;
}
.goods-list{
	background: #fff;
	height: 100%;
}
.goods-list .goods-item{
	width:33%;
	height: 200rpx;
	margin-top: 50rpx;
	position: relative;
}
.goods-item image{
	width:140rpx;
	height: 150rpx;

}
.goods-item .add-cart{
	position: absolute;
	top:0;
	z-index: 1000;
	width:40rpx;
	height: 40rpx;
	right: 0rpx;
	font-size:40rpx;
	color:#fff;
	background: #fa3e47;
	border-radius: 20rpx;
	line-height: 40rpx;
	text-align: center;
}
.goods-item .name{
	font-size:28rpx;
	margin-top: 30rpx;
}