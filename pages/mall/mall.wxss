.nav-list{
	width:100%;
	height: 90rpx;
	margin-bottom: 20rpx;
	color: #666;
	font-size: 30rpx;
	border-bottom: 1rpx solid #e5e5e5;
	position: fixed;
	z-index:200;
	top:0px;
		border-top: 1rpx solid #e5e5e5;
}
.nav-item{
	height: 100%;
	font-weight: bold;
}
.selected-nav{
	color:#ff4444;
	border-bottom: 2rpx solid #ff4444;

}
.nav-list-box{
	height: 100%;
	border-bottom: 2rpx solid #fff;

}
.nav-list-box .title{
	height: 100%;
	padding:0 20rpx;
}

.list-box .top-title{
	height: 100rpx;
	background: #fff;
	margin-top: 20rpx;
	margin-bottom: 10rpx;
}
.swiper{
	width:100%;
	height: 275rpx;
}
.swiper image{
	width:100%;
	height: 275rpx;
}
.hot-goods-list {
	flex-wrap: wrap;

}

.hot-goods-item {
	width: 50%;
	height: 500rpx;
	margin-bottom: 20rpx;

}

.goods-msg-box {
	width: 350rpx;
	height: 500rpx;
	border: 1rpx solid #eee;
	box-sizing: border-box;
}

.goods-img {
	width: 100%;
	height: 350rpx;
	background: #f4f4f4;
}

.goods-img image {
	width: 100%;
	height: 100%;
}

.hot-sell-box {
	width: 100%;
	margin-top: 22rpx;
	border-top: 1px solid #E3E3E3;
}

.hot-sell-box .hot-sell-title {
	height: 108rpx;
	text-align: center;
	font-size: 34rpx;
	line-height: 86rpx;
	color: #666666;
	width: 100%;
}

.hot-sell-title image {
	width: 90rpx;
	height: 10rpx;
}

.hot-sell-title span {
	margin: 0 10rpx;
}

.hot-goods-item .title {
	height: 50rpx;
	line-height: 50rpx;
	font-size: 28rpx;
	color: #333333;
	width: 300rpx;
}

.hot-goods-item .origin-price {
	height: 40rpx;
	line-height: 40rpx;
	text-decoration: line-through;
	color: #999999;
	font-size: 24rpx;
	width: 300rpx;
}

.hot-goods-item .discount-price {
	width: 300rpx;
	height: 60rpx;
	color: #7f7f7f;
}

.discount-price .price {
	color: #ff3c42;
	font-size: 28rpx;
}

.discount-price .count-box {
	font-size: 25rpx;
	float: right;
}

.discount-price .count-value {
	color: #ff3c42;
	margin-right: 10rpx;
}