
.title-box{
	border-bottom: 1rpx solid #e5e5e5;
	border-top: 1rpx solid #ddd;
	position: fixed;
	top:0px;
	z-index: 1000;
}
.title-name{
	height: 90rpx;
	color:#bdbdbd;

}
.title-name div{
	height: 100%;
	line-height: 90rpx;
	font-size:32rpx;
}
.selected{
	color:#e56000;
	border-bottom: 4rpx solid #e56000;
}
.order-msg{
	width:100%;
	height: 80rpx;
	font-size:28rpx;
}
.service-number{
	width:170rpx;
	
	color:#333;
	text-align: center;
}
.order-msg .number{
	color:#333;

}
.order-msg .states{
	margin-right: 30rpx;
	color:#e56000;
	text-align: center;
}
.order-msg .time{
	width:102rpx;
	color:#666666;
	text-align: center;
}
.null-more-data {
	margin-top: -20rpx;
}
.order-btn{
	height: 80rpx;
	line-height: 80rpx;
	width:100%;
	background: #fff;
	text-align: center;
	color:#e7e7e7;
	font-size:30rpx;
}
.order-name{
	height: 100%;
	font-size:34rpx;
}
.order-name .name{
	width:100%;
	font-size:32rpx;
}
.order-name .styles{
	width:100%;
	color:#9a9a9a;
	font-size:26rpx;
	margin-top: 15rpx;
}
.order-protrait{
	width:100%;
	padding:10rpx;
	
}
.order-protrait .img-box{
	width:190rpx;
}
.order-protrait .img-box image{
	width:152rpx;
	height: 152rpx;
}
.order-protrait .price{
	float: right;
	margin-right: 24rpx;
	font-size:28rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-end;
}
.price .origin-price{
	color:#999;
	text-decoration: line-through;
}
.price .discount-price{
	float:right;
}
.buyer-number{
	text-align: right;
	color:#999999;

}
.buyer-number span{
	float:right;
}
.order-item{
