	line-height: 50rpx;
	margin-right:25rpx;

}
.cr-b{
	color:#333;
}
.finish{
	color:#ff4444;
	height: 80rpx;
	background: #fff;
	width:100%;
	font-size:30rpx;
}
.finish-time{
	margin-right: 24rpx;
}
.finish-date{
	margin-right: 14rpx;
}
.bbl{
