  <scroll-view scroll-x  class="swiper-title" scroll-into-view="cateId-{{1}}" scroll-with-animation="{{true}}">
   	<view class="flex-x" style="width:{{200*menuList.length+'rpx'}};height:100%;">
	   	<block wx:for="{{menuList}}">
				<view class="flex-x {{cateIndex==index?'selected':''}} item" bindtap="changeCate" data-index="{{index}}" style="width:200rpx;height:100%;" id="cateId-{{index}}">
					{{item.title}}
				</view>
			</block>
		</view>
  </scroll-view>
  <view style="height: 100rpx;"></view>
	<view class="flex-1 goods-list">
