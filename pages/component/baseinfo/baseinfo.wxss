.wx-msg{
	width:100%;
	height: 275rpx;
	background: #fe5600;
	background-image: -webkit-linear-gradient(bottom, #fac362 10%,#fe5600 90%);
	position: relative;
}
.name{
	position: absolute;
	left: 240rpx;
	top:50%;
	margin-top: -50rpx;
	color:#fff;
	font-size: 30rpx;
}
.score{
	position: absolute;
	left: 240rpx;
	top:55%;
	
	color:#fff;
	font-size: 30rpx;
}
.avatar{
	position: absolute;
	top:50%;
	margin-top: -75rpx;
	left:60rpx;
	width:150rpx;
	height: 150rpx;
	border:4rpx solid #ccc;
	border-radius: 75rpx;
	background: #fff;
}
.img{
	width:100%;
	height: 100%;

}