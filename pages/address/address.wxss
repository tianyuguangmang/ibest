.address{
	width: 100%;
}
.address .item{
	width:100%;
	margin-top: 20rpx;
	background: #fff;
	color: #333;
	font-size:30rpx;
}
.item .base{
	padding:25rpx 30rpx 5rpx 30rpx;
}
.item .pos{
	padding:0 30rpx;
	margin-top: 20rpx;
}
.item .btn{
	margin-top: 20rpx;
	padding:20rpx 30rpx;
}
.btn .dele{
	margin-left: 30rpx;
}
.btn .default{
	color: #f84f2f;
}
.btn-box{
	position: fixed;
	bottom: 0rpx;
	left: 0rpx;
	width:100%;
	height: 130rpx;

}
.btn-box .btn{
	width:600rpx;
	height: 80rpx;
	color: #fff;
	border-radius: 40rpx;
	background:#fe5600;
}